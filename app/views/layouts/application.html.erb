<!DOCTYPE html>
<html>
  <head>
    <title>MsgrClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="fixed-top navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/msgr/splash">MSGR</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/msgr/profile">Profile <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/msgr/friends_list">Friends <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/msgr/chatrooms_list">Chats <span class="sr-only">(current)</span></a>
          </li>
        </ul>
          <a><%= link_to("Log Out", controller: "session", action: "destroy") %></a>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>