<div class="m-auto text-center card" style="width: 18rem;">
    <img src="https://www.placecage.com/200/100" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">MSGR</h5>

        <%= form_with(url: "/login", method: "post") do %>
            <div class="form-group mx-sm-3 mb-2">
                <label for="inputPassword2" class="sr-only">Username</label>
                <input type="string" class="form-control" name="username" placeholder="Username">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="inputPassword2" class="sr-only">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Login</button>
            <br>
            <a><%= link_to("Sign Up", controller: "session", action: "new") %></a>
        <% end %>

    </div>
</div>

<div>
    <%= @error_message %>
</div>