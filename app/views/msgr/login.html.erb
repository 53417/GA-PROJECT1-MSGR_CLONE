<div class="m-auto text-center card" style="width: 60%">
    <img src="https://www.placecage.com/200/100" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">MSGR</h5>

        <%= form_with(url: "/login", method: "post") do %>
            <div class="form-group mx-sm-3 mb-2">
                <label for="inputPassword2" class="sr-only">Username</label>
                <input type="string" class="form-control" name="username" placeholder="Username">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="inputPassword2" class="sr-only">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary mb-2" style="width: 100%">Login</button>
            <br>
        <% end %>

    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="btn-group" style="width: 65%">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
            Sign Up
            </button>

            <form action="/create" method="post" class="dropdown-menu p-4" style="width: 100%">
                <div class="form-group">
                    <label for="exampleDropdownFormEmail2">Username</label>
                    <input type="string" class="form-control" name="signup_username" id="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="exampleDropdownFormPassword2">Password</label>
                    <input type="password" class="form-control" name="signup_password" id="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%">Create Account</button>
            </form>

        </div>
    </div>
</div>

<div>
    <%= @error_message %>
</div>